{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "version": "1.1.0",
  "lastUpdated": "2026-02-11",
  "description": "Comprehensive registry of development tools and processes for experimentation and standardization",

  "categories": {
    "linting": {
      "description": "Code linting and static analysis tools",
      "options": [
        {
          "id": "eslint-strict",
          "name": "ESLint Strict",
          "package": "@your-org/eslint-config-strict",
          "version": "^1.0.0",
          "description": "Strict ESLint rules with TypeScript support",
          "status": "experimental",
          "introduced": "2026-02-09"
        },
        {
          "id": "eslint-base",
          "name": "ESLint Base",
          "package": "@your-org/eslint-config-base",
          "version": "^1.0.0",
          "description": "Balanced ESLint rules (current standard)",
          "status": "standard",
          "introduced": "2026-02-08"
        },
        {
          "id": "biome",
          "name": "Biome",
          "package": "@biomejs/biome",
          "version": "^1.5.0",
          "description": "Fast alternative to ESLint + Prettier",
          "status": "experimental",
          "introduced": "2026-02-09"
        }
      ],
      "tracked_metrics": [
        "code_quality_score",
        "pr_approval_rate",
        "violation_count",
        "linting_time_ms",
        "developer_satisfaction"
      ]
    },

    "testing": {
      "description": "Test frameworks and runners",
      "options": [
        {
          "id": "vitest",
          "name": "Vitest",
          "package": "vitest",
          "version": "^1.2.0",
          "description": "Fast Vite-native test runner (current standard)",
          "status": "standard",
          "introduced": "2026-02-08"
        },
        {
          "id": "jest",
          "name": "Jest",
          "package": "jest",
          "version": "^29.0.0",
          "description": "Mature test framework (legacy)",
          "status": "deprecated",
          "introduced": "2025-01-01",
          "deprecated": "2026-02-08"
        },
        {
          "id": "playwright",
          "name": "Playwright",
          "package": "@playwright/test",
          "version": "^1.41.0",
          "description": "E2E testing framework",
          "status": "standard",
          "introduced": "2026-02-08"
        }
      ],
      "tracked_metrics": [
        "test_coverage_percent",
        "test_runtime_ms",
        "flake_rate",
        "tests_written_per_week",
        "developer_satisfaction"
      ]
    },

    "git_workflow": {
      "description": "Git branching and collaboration strategies",
      "options": [
        {
          "id": "trunk-based",
          "name": "Trunk-Based Development",
          "package": null,
          "version": null,
          "description": "Short-lived branches, frequent integration",
          "status": "standard",
          "introduced": "2026-02-08"
        },
        {
          "id": "gitflow",
          "name": "GitFlow",
          "package": null,
          "version": null,
          "description": "Feature branches with develop/main",
          "status": "experimental",
          "introduced": "2026-02-09"
        },
        {
          "id": "github-flow",
          "name": "GitHub Flow",
          "package": null,
          "version": null,
          "description": "Simple feature branches to main",
          "status": "experimental",
          "introduced": "2026-02-09"
        }
      ],
      "tracked_metrics": [
        "deployment_frequency",
        "lead_time_hours",
        "merge_conflict_rate",
        "pr_cycle_time_hours",
        "developer_satisfaction"
      ]
    },

    "ide": {
      "description": "Integrated Development Environments",
      "options": [
        {
          "id": "vscode",
          "name": "VS Code",
          "package": null,
          "version": null,
          "description": "Microsoft Visual Studio Code",
          "status": "standard",
          "introduced": "2025-01-01"
        },
        {
          "id": "cursor",
          "name": "Cursor",
          "package": null,
          "version": null,
          "description": "AI-first fork of VS Code",
          "status": "experimental",
          "introduced": "2026-01-15"
        },
        {
          "id": "windsurf",
          "name": "Windsurf",
          "package": null,
          "version": null,
          "description": "Codeium's AI-native IDE",
          "status": "experimental",
          "introduced": "2026-02-01"
        }
      ],
      "tracked_metrics": [
        "code_quality_score",
        "velocity_commits_per_week",
        "ai_suggestion_acceptance_rate",
        "developer_satisfaction"
      ]
    },

    "commit_style": {
      "description": "Commit message conventions",
      "options": [
        {
          "id": "conventional-commits",
          "name": "Conventional Commits",
          "package": "@commitlint/config-conventional",
          "version": "^18.0.0",
          "description": "feat/fix/chore conventions (current standard)",
          "status": "standard",
          "introduced": "2026-02-08"
        },
        {
          "id": "gitmoji",
          "name": "Gitmoji",
          "package": "gitmoji-cli",
          "version": "^9.0.0",
          "description": "Emoji-based commit messages",
          "status": "experimental",
          "introduced": "2026-02-09"
        }
      ],
      "tracked_metrics": [
        "commit_message_quality_score",
        "changelog_generation_success_rate",
        "developer_satisfaction"
      ]
    },

    "code_review": {
      "description": "Code review tools and processes",
      "options": [
        {
          "id": "github-pr",
          "name": "GitHub Pull Requests",
          "package": null,
          "version": null,
          "description": "Standard GitHub PR review",
          "status": "standard",
          "introduced": "2025-01-01"
        },
        {
          "id": "pr-agent",
          "name": "PR-Agent",
          "package": null,
          "version": null,
          "description": "AI-powered PR analysis and suggestions",
          "status": "experimental",
          "introduced": "2026-02-09"
        }
      ],
      "tracked_metrics": [
        "pr_approval_rate",
        "pr_cycle_time_hours",
        "review_comment_count",
        "bug_escape_rate",
        "developer_satisfaction"
      ]
    },

    "ai_assistant": {
      "description": "AI coding assistants",
      "options": [
        {
          "id": "claude-code",
          "name": "Claude Code",
          "package": null,
          "version": null,
          "description": "Anthropic Claude for coding",
          "status": "standard",
          "introduced": "2026-01-01"
        },
        {
          "id": "github-copilot",
          "name": "GitHub Copilot",
          "package": null,
          "version": null,
          "description": "GitHub's AI pair programmer",
          "status": "experimental",
          "introduced": "2026-02-09"
        },
        {
          "id": "codeium",
          "name": "Codeium",
          "package": null,
          "version": null,
          "description": "Free AI code completion",
          "status": "experimental",
          "introduced": "2026-02-09"
        }
      ],
      "tracked_metrics": [
        "velocity_commits_per_week",
        "code_quality_score",
        "ai_suggestion_acceptance_rate",
        "bug_rate",
        "developer_satisfaction"
      ]
    },

    "qa_testing": {
      "description": "QA testing infrastructure, manual/automated test coordination, and test result management",
      "options": [
        {
          "id": "ralph-loop",
          "name": "Ralph Loop",
          "package": null,
          "version": null,
          "description": "Automated failure ingestion pipeline: Playwright failures → Supabase → GitHub Issues with dedup + adaptive MCP triggers",
          "status": "standard",
          "introduced": "2026-02-10"
        },
        {
          "id": "test-claim-system",
          "name": "Test Claim System",
          "package": null,
          "version": null,
          "description": "REST API for QA coordination: claim/heartbeat/release tests to prevent conflicts between testers",
          "status": "standard",
          "introduced": "2026-02-11"
        },
        {
          "id": "manual-test-runner",
          "name": "Manual Test Runner (HTML)",
          "package": null,
          "version": null,
          "description": "Browser-based manual test execution with API integration, claim system, and result submission to unified pipeline",
          "status": "standard",
          "introduced": "2026-02-11"
        },
        {
          "id": "coverage-matrix",
          "name": "Coverage Matrix Generator",
          "package": null,
          "version": null,
          "description": "Keyword-matching engine mapping manual tests to E2E specs, outputs JSON + HTML coverage reports",
          "status": "standard",
          "introduced": "2026-02-11"
        },
        {
          "id": "flake-registry",
          "name": "Flake Registry + Budget Tracker",
          "package": null,
          "version": null,
          "description": "JSON-based flake tracking with MCP budget enforcement ($0.05/day cap) and adaptive failure classification",
          "status": "standard",
          "introduced": "2026-02-11"
        },
        {
          "id": "unified-results-dashboard",
          "name": "Unified Test Results Dashboard",
          "package": null,
          "version": null,
          "description": "React component (TestResults.tsx) showing Playwright + Manual results in one table with status/type filters",
          "status": "standard",
          "introduced": "2026-02-11"
        }
      ],
      "tracked_metrics": [
        "flake_rate",
        "manual_test_coverage_percent",
        "duplicate_report_rate",
        "github_issue_noise_per_day",
        "mcp_daily_cost_usd",
        "test_claim_utilization"
      ]
    },

    "task_management": {
      "description": "Issue tracking and task management for AI workflows",
      "options": [
        {
          "id": "beads",
          "name": "Beads",
          "package": "beads",
          "version": "latest",
          "description": "AI-optimized issue tracker - JSONL storage, hash-based IDs, agent-friendly JSON output",
          "status": "experimental",
          "introduced": "2026-02-09",
          "repo": "https://github.com/steveyegge/beads"
        },
        {
          "id": "github-issues",
          "name": "GitHub Issues",
          "package": null,
          "version": null,
          "description": "Standard GitHub issue tracking",
          "status": "standard",
          "introduced": "2025-01-01"
        },
        {
          "id": "linear",
          "name": "Linear",
          "package": null,
          "version": null,
          "description": "Modern issue tracking and project management",
          "status": "experimental",
          "introduced": "2026-02-09"
        }
      ],
      "tracked_metrics": [
        "velocity_commits_per_week",
        "task_completion_rate",
        "task_cycle_time_hours",
        "developer_satisfaction"
      ]
    }
  },

  "tool_statuses": {
    "standard": "Recommended for all projects (proven effective)",
    "experimental": "Available for testing (data collection phase)",
    "deprecated": "Being phased out (migrate away)",
    "proposed": "Under evaluation (not yet available)"
  },

  "metric_definitions": {
    "code_quality_score": {
      "type": "numeric",
      "range": [0, 100],
      "source": "team-analytics MCP",
      "description": "Overall code quality score from git analysis"
    },
    "velocity_commits_per_week": {
      "type": "numeric",
      "range": [0, null],
      "source": "team-analytics MCP",
      "description": "Average commits per week per engineer"
    },
    "pr_approval_rate": {
      "type": "numeric",
      "range": [0, 1],
      "source": "GitHub API",
      "description": "Percentage of PRs approved on first review"
    },
    "bug_rate": {
      "type": "numeric",
      "range": [0, 1],
      "source": "git history",
      "description": "Percentage of commits that are bug fixes"
    },
    "test_coverage_percent": {
      "type": "numeric",
      "range": [0, 100],
      "source": "CI/CD coverage reports",
      "description": "Percentage of code covered by tests"
    },
    "developer_satisfaction": {
      "type": "numeric",
      "range": [1, 5],
      "source": "weekly surveys",
      "description": "Developer satisfaction rating (1-5 scale)"
    },
    "deployment_frequency": {
      "type": "numeric",
      "range": [0, null],
      "source": "DORA metrics",
      "description": "Deployments per week (DORA metric)"
    },
    "lead_time_hours": {
      "type": "numeric",
      "range": [0, null],
      "source": "DORA metrics",
      "description": "Hours from commit to production (DORA metric)"
    },
    "flake_rate": {
      "type": "numeric",
      "range": [0, 100],
      "source": "flake-registry.json + coverage-gaps.json",
      "description": "Percentage of E2E tests with >10% flake rate"
    },
    "manual_test_coverage_percent": {
      "type": "numeric",
      "range": [0, 100],
      "source": "coverage-gaps.json",
      "description": "Percentage of manual tests with E2E coverage (keyword matching)"
    },
    "duplicate_report_rate": {
      "type": "numeric",
      "range": [0, 100],
      "source": "Supabase ralph_loop_events",
      "description": "Percentage of duplicate failure reports in pipeline"
    },
    "github_issue_noise_per_day": {
      "type": "numeric",
      "range": [0, null],
      "source": "gh issue list --label ralph-loop",
      "description": "Daily GitHub issue creation rate from test failures"
    },
    "mcp_daily_cost_usd": {
      "type": "numeric",
      "range": [0, null],
      "source": "mcp-budget-tracker.js getDailySpend()",
      "description": "Daily MCP API cost in USD (budget cap: $0.05)"
    },
    "test_claim_utilization": {
      "type": "numeric",
      "range": [0, 1],
      "source": "Supabase test_claims table",
      "description": "Ratio of claimed tests to total active manual tests"
    }
  },

  "promotion_criteria": {
    "description": "Criteria for promoting experimental tools to standard",
    "requirements": {
      "min_users": 5,
      "min_duration_weeks": 8,
      "min_improvement_percent": 10,
      "max_p_value": 0.05,
      "min_satisfaction_score": 4.0,
      "min_adoption_willingness_percent": 75
    }
  },

  "deprecation_policy": {
    "description": "Policy for deprecating tools",
    "grace_period_weeks": 12,
    "migration_support": true,
    "automated_migration": "preferred"
  }
}
